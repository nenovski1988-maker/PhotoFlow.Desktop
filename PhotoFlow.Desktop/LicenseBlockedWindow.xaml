<Window x:Class="PhotoFlow.Desktop.LicenseBlockedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhotoFlow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="700" Height="430"
        Topmost="True">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="License required"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,12"/>

        <TextBlock Grid.Row="1"
                   Text="PhotoFlow can’t start because the license file is missing or invalid."
                   FontSize="16"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"/>

        <Border Grid.Row="2" Background="#FFF3F3F3" CornerRadius="10" Padding="14">
            <StackPanel>
                <TextBlock Text="Reason:" FontWeight="Bold" Margin="0,0,0,6"/>
                <TextBlock x:Name="ReasonText" Text="-" TextWrapping="Wrap" Margin="0,0,0,14"/>

                <TextBlock Text="Expected license file path:" FontWeight="Bold" Margin="0,0,0,6"/>
                <TextBlock x:Name="PathText" Text="-" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Width="140" Height="36" Content="Exit" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
