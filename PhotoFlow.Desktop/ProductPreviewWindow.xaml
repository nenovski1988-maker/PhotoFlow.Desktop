<Window x:Class="PhotoFlow.Desktop.ProductPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterOwner"
    Background="Black">


    <Window.Resources>
        <!-- local checker for transparent preview -->
        <DrawingBrush x:Key="CheckerBrush"
                      TileMode="Tile"
                      Viewport="0,0,24,24"
                      ViewportUnits="Absolute"
                      Viewbox="0,0,24,24"
                      ViewboxUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#FFFFFFFF">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,24,24"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="#FFE6E6E6">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="0,0,12,12"/>
                                <RectangleGeometry Rect="12,12,12,12"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Resources>

   <Grid Margin="16" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        

        <!-- top -->
        <Border Grid.Row="0" Style="{StaticResource GreenCard}">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Preview" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ProductText"
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button DockPanel.Dock="Right"
                        Style="{StaticResource AccentButton}"
                        Content="Refresh"
                        Width="110"
                        Click="Refresh_Click"/>
            </DockPanel>
        </Border>

        <!-- body -->
        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- preview image -->
            <Border Grid.Column="0" Style="{StaticResource GreenCardStrongBorder}">
                <Grid Background="{StaticResource CheckerBrush}">
                    <Image x:Name="PreviewImage" Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- controls -->
            <Border Grid.Column="1" Style="{StaticResource GreenCard}" Margin="12,0,0,0">
                <!-- IMPORTANT: prevents "cut off" UI -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Method" FontWeight="SemiBold" FontSize="14"/>

                        <ComboBox x:Name="MethodCombo"
                                  Style="{StaticResource GreenCombo}"
                                  Margin="0,10,0,0"
                                  SelectionChanged="MethodCombo_SelectionChanged">
                            <ComboBoxItem Content="Manual (sliders)" Tag="Manual" IsSelected="True"/>
                            <ComboBoxItem Content="AI (fast)" Tag="AI_FAST"/>
                            <ComboBoxItem Content="AI (quality)" Tag="AI_QUALITY"/>
                           
                        </ComboBox>

                        <Separator Margin="0,14,0,14"/>

                        <TextBlock Text="Manual cut settings"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="ThresholdLabel"
                                   Text="White threshold"
                                   Foreground="{StaticResource TextMuted}"/>

                        <Slider x:Name="ThresholdSlider"
                                Minimum="200"
                                Maximum="255"
                                Value="245"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Margin="0,8,0,0"/>

                        <TextBlock x:Name="ThresholdValue"
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,6,0,14"/>

                        <TextBlock x:Name="FeatherLabel"
                                   Text="Feather (soft edge)"
                                   Foreground="{StaticResource TextMuted}"/>

                        <Slider x:Name="FeatherSlider"
                                Minimum="0"
                                Maximum="50"
                                Value="10"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Margin="0,8,0,0"/>

                        <TextBlock x:Name="FeatherValue"
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,6,0,14"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CleanButton"
                                    Content="Clean"
                                    Width="110"
                                    Margin="0,0,10,0"
                                    Click="PresetClean_Click"/>
                            <Button x:Name="StrongButton"
                                    Content="Strong"
                                    Width="110"
                                    Click="PresetStrong_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- bottom -->
        <Border Grid.Row="2" Style="{StaticResource GreenCard}">
            <DockPanel LastChildFill="True">
                <TextBlock x:Name="StatusText"
                           Foreground="{StaticResource TextMuted}"
                           VerticalAlignment="Center"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource AccentButton}"
                            Content="Apply for current product"
                            Width="220"
                            Margin="0,0,10,0"
                            Click="ApplyProduct_Click"/>

                    <Button Style="{StaticResource AccentButton}"
                            Content="Apply for session"
                            Width="170"
                            Margin="0,0,10,0"
                            Click="ApplySession_Click"/>

                    <Button Content="Cancel"
                            Width="110"
                            Click="Cancel_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
